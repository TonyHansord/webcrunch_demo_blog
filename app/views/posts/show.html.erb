<% content_for :page_title, @post.title%>
<section class='section'>
  <div class='container'>
    <nav class='level'>
      <div class='level-left'>
        <p class='level-item'>
          <strong>Actions</strong>
        </p>
      </div>
      <div class='level-right'>
        <p class='level-item'>
          <%= link_to 'Edit', edit_post_path(@post), class: 'button is primary' %>
        </p>
        <p class='level-item'>
          <%= link_to 'Delete', post_path(@post), data: {turbo_method: :delete,  turbo_confirm: 'Are you sure?' }, class: 'button is-danger' %>
        </p>
      </nav>
      <hr/>
      <div>
        <%= @post.content %>
      </div>
    </div>
  </section>
  <section class="section comments">
    <div class="container">
      <h2 class="subtitle is-5"><%= @post.comments.count %> Comments</h2>
      <%= render @post.comments%>
      <div class="comment-form">
        <hr/>
        <h3 class="subtitle is-3"></h3>
        <%= render 'comments/form'%>
      </div>
    </div>
  </section>