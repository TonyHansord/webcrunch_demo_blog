<div class="box">
  <div class="media">
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= comment.name %></strong>
          <br>
          <%= comment.content %>
        </p>
      </div>
    </div>
    <%= link_to 'Delete', [comment.post, comment],
                data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
                class: 'button is-danger' %>
  </div>
</div>